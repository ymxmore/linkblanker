{
    "manifest_version": 3,
    "version": "3.0.0",
    "name": "Link Blanker",
    "description": "Open link in new tab.",
    "homepage_url": "https://www.x-more.co.jp/app/link-blanker/",
    "icons": {
        "128": "img/icon.png",
        "16": "img/icon16.png",
        "19": "img/icon19.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "64": "img/icon64.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "unlimitedStorage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "exclude_globs": [
                "*.3gp",
                "*.3gpp",
                "*.7z",
                "*.ai",
                "*.asf",
                "*.asx",
                "*.atom",
                "*.atom",
                "*.avi",
                "*.bin",
                "*.bmp",
                "*.cco",
                "*.crt",
                "*.css",
                "*.css",
                "*.deb",
                "*.der",
                "*.dll",
                "*.dmg",
                "*.doc",
                "*.ear",
                "*.eot",
                "*.eps",
                "*.exe",
                "*.flv",
                "*.gif",
                "*.gif",
                "*.hqx",
                "*.htc",
                "*.ico",
                "*.img",
                "*.iso",
                "*.jad",
                "*.jar",
                "*.jardiff",
                "*.jng",
                "*.jnlp",
                "*.jpeg",
                "*.jpg",
                "*.js",
                "*.js",
                "*.json",
                "*.kar",
                "*.kml",
                "*.kmz",
                "*.m4a",
                "*.m4v",
                "*.mid",
                "*.midi",
                "*.mml",
                "*.mng",
                "*.mov",
                "*.mp3",
                "*.mp4",
                "*.mpeg",
                "*.mpg",
                "*.msi",
                "*.msm",
                "*.msp",
                "*.ogg",
                "*.otf",
                "*.pdb",
                "*.pdf",
                "*.pem",
                "*.pl",
                "*.pm",
                "*.png",
                "*.ppt",
                "*.prc",
                "*.ps",
                "*.ra",
                "*.rar",
                "*.rpm",
                "*.rss",
                "*.rss",
                "*.rtf",
                "*.run",
                "*.sea",
                "*.shtml",
                "*.sit",
                "*.svg",
                "*.svgz",
                "*.swf",
                "*.tcl",
                "*.tif",
                "*.tiff",
                "*.tk",
                "*.ttf",
                "*.txt",
                "*.war",
                "*.wbmp",
                "*.webm",
                "*.webp",
                "*.wml",
                "*.wmlc",
                "*.wmv",
                "*.woff",
                "*.xls",
                "*.xml",
                "*.xml",
                "*.xpi",
                "*.zip"
            ],
            "js": [
                "contentscript.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "action": {
        "default_icon": {
            "19": "img/icon19.png",
            "32": "img/icon32.png"
        },
        "default_title": "Link Blanker",
        "default_popup": "html/popup.html"
    },
    "default_locale":"en",
    "web_accessible_resources": [
        {
            "resources": ["html/notify-close-tabs.html"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ]
}
